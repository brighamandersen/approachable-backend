generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite3"
}

model User {
  id                    Int       @id @default(autoincrement())
  firstName             String
  lastName              String
  birthDate             Int
  profilePictureUrl     String?
  bio                   String?
  hiddenOnMap           Boolean   @default(false)
  interestedInFriends   Boolean   @default(false)
  interestedInDating    Boolean   @default(false)
  interestedInBusiness  Boolean   @default(false)
  interestedInHelp      Boolean   @default(false)
  latitude              Float
  longitude             Float
  locationLastUpdated   Int
}